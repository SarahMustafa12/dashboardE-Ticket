@model IEnumerable<Movie> 
<div class="container-fluid mt-4">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" style="height: 400px;">
            <!-- Set container height -->
            <div class="carousel-item active">
                <img class="d-block w-100 h-100 object-fit-cover" src="~/images/movies/movie10.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 h-100 object-fit-cover" src="~/images/movies/movie4.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 h-100 object-fit-cover" src="~/images/movies/movie3.png" alt="Third slide">
            </div>
        </div>
    </div>
</div>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            @* foreach *@ 
            @foreach (var item in Model) {
                <div class="col-md-6">

                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/images/movies/@item.ImgUrl" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                 <p class="card-text">Cinema: @item.Cinema.Name </p>
                                    <p class="card-text">Price: @item.Price.ToString("C") </p>
                                <p class="card-text">Start Date: @item.StartDate </p>
                                <p class="card-text">End Date: @item.EndDate</p>
                                    <p class="card-text">
                                        Category: <a class="link-info" href="/End%20User/Home/ShowCategory">@item.Category.Name</a>
                                    </p>
                                    @if(item.MovieStatus == 0 ){
                                        <p class="card-text">
                                            <button type="button" class="btn btn-info">Up Coming Soon</button>
                                        </p>
                                        <button type="button" class="btn btn-dark" disabled>Book Ticket </button>
                                    }
                                    else if (item.MovieStatus ==1){
                                         <p class="card-text"> 
                                        <button type="button" class="btn btn-green">Availible</button>
                                        </p>
                                        <button type="button" class="btn btn-dark" >Book Ticket </button>
                                    }
                                    else {
                                         <p class="card-text"> 
                                        <button type="button" class="btn btn-danger">Expired</button>
                                        </p>
                                        <button type="button" class="btn btn-dark" disabled>Book Ticket </button>
                                    }
                                    <a href="/End%20User/Home/ShowDetails/@item.Id" class="btn btn-light">More Detalis</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
}
        </div>
    </div>
</section>

